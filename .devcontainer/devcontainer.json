{
	"name": "Promptflow-Python39",
	// "context" is the path that the Codespaces docker build command should be run from, relative to devcontainer.json
	"context": ".",
	"dockerFile": "Dockerfile",

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	
	"postCreateCommand": "pip uninstall -y promptflow promptflow-core promptflow-devkit promptflow-azure && pip3 install --user -r requirements.txt",
	
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
		"ms-toolsai.vscode-ai",
		"ms-toolsai.jupyter",
		"redhat.vscode-yaml",
		"prompt-flow.prompt-flow",
		"GitHub.copilot"
	],

	"runArgs": ["-v", "/var/run/docker.sock:/var/run/docker.sock"]
}
